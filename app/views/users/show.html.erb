<div class="container">
  <div class="row">
    <h2>マイページ</h2>
  </div>
  <table>
    <tr>
      <th>名前</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>自己紹介</th>
      <td><%= @user.introduction %></td>
    </tr>
    <tr>
      <th>登録日</th>
      <td><%= @user.created_at %></td>
    </tr>
  </table>
  <div class="link">
    <%= link_to "編集する", edit_user_path(current_user.id), class: "btn btn-success btn-sm" %>
  </div>
</div>

