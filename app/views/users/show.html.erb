<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/list', user: @user, game: @game %>
    <div class="col-md-8 offset-md-1">
      <table class="table table-stripped">
        <h2>投稿一覧</h2>
        <tr>
          <th>image</th>
          <th>ユーザー名</th>
          <th>タイトル</th>
          <th>本文</th>
          <th>投稿日</th>
        </tr>
        <% @games.each do |game| %>
        <tr>
          <td>
            <%= link_to game_path(game) do %>
              <%= attachment_image_tag game, :image, :fill, 40, 40, format: 'jpeg' %>
            <% end %>
          </td>
          <td><%= game.user.name %></td>
          <td><%= game.title %></td>
          <td><%= game.text %></td>
          <td><%= game.created_at.to_s(:datetime_jp) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>


