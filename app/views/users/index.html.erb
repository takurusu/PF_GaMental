<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/list', user: @user, game: @game %>
    <div class="col-md-8 offset-md-1">
      <table class="table table-stripped">
        <h2>ユーザー一覧</h2>
        <tr>
          <th>image</th>
          <th>ユーザー名</th>
          <th>自己紹介</th>
          <th>登録日</th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <td>Image</td>
          <td>
            <%= link_to user_path(user) do %>
              <%= user.name %>
            <% end %>
          </td>
          <td><%= user.introduction %></td>
          <td><%= user.created_at %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>


