<div class="container">
  <div class="row">
    <h2>投稿詳細</h2>
  </div>
  <table>
    <tr>
      <th>タイトル</th>
      <td><%= @game.title %></td>
    </tr>
    <tr>
      <th>本文</th>
      <td><%= @game.text %></td>
    </tr>
    <tr>
      <th>ユーザー名</th>
      <td><%= @game.user.name %></td>
    </tr>
    <tr>
      <th>投稿日</th>
      <td><%= @game.created_at %></td>
    </tr>
  </table>
  <div class="link">
    <%= link_to "編集する", edit_game_path, class: "btn btn-success btn-sm" %>
    <%= link_to "削除する", game_path(@game), method: :delete, class: "btn btn-danger btn-sm" %>
  </div>
</div>


