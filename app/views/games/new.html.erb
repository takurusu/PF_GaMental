<div class="container">
  <div class="col-md-8 offset-md-1">
    <h2>新規投稿</h2>
  <%= form_with model: @game, local: true do |f| %>
  <table>
    <tr>
      <th>image</th>
      <td><%= f.attachment_field :image %></td>
    </tr>
    <tr>
      <th>タイトル</th>
      <td><%= f.text_field :title %></td>
    </tr>
    <tr>
      <th>本文</th>
      <td><%= f.text_area :text %></td>
    </tr>
  </table>
    <%= f.submit "新規投稿", class: "btn btn-success btn-sm" %>
  <% end %>
  </div>
</div>


