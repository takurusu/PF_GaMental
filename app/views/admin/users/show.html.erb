<div class="container">
  <div class="row">
    <h2><%= @user.name %>さんの詳細ページ</h2>
  </div>
  <table>
    <tr>
      <th>プロフィール画像</th>
      <td><%= attachment_image_tag @user, :image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
    </tr>
    <tr>
      <th>名前</th>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <th>自己紹介</th>
      <td><%= @user.introduction %></td>
    </tr>
    <tr>
      <th>登録日</th>
      <td><%= @user.created_at %></td>
    </tr>
    <tr>
      <th>退会ステータス</th>
      <td><%= @user.is_active %></td>
    </tr>
  </table>
  <div class="link">
    <%= link_to "編集する", edit_admin_user_path, class: "btn btn-success btn-sm" %>
  </div>
</div>

