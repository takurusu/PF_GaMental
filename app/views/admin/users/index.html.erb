<div class="container">
  <div class="row">
    <h2>ユーザー一覧</h2>
  </div>
  <table class="table table-stripped">
    <tr>
      <th>image</th>
      <th>ユーザー名</th>
      <th>自己紹介</th>
      <th>登録日</th>
      <th>退会ステータス</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag user, :image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
      <td>
        <%= link_to admin_user_path(user) do %>
          <%= user.name %>
        <% end %>
      </td>
      <td><%= user.introduction %></td>
      <td><%= user.created_at %></td>
      <td><%= user.is_active %></td>
    </tr>
    <% end %>
  </table>
</div>